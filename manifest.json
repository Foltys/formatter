{
  "manifest_version": 3,
  "name": "Text Format Viewer",
  "version": "1.0.0",
  "description": "View selected text with proper formatting - converts \\n to actual line breaks",
  "permissions": ["activeTab", "clipboardRead"],
  "action": {
    "default_title": "Text Format Viewer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
